<Page x:Class="SastImg.Client.Views.ImageAlone"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Image x:Name="ImageControl" Stretch="Uniform" />
        <StackPanel VerticalAlignment="Bottom" Margin="10">
            <TextBlock x:Name="TitleTextBlock" FontSize="24" />
            <TextBlock x:Name="UploadedAtTextBlock" FontSize="16" />
            <TextBlock x:Name="IdTextBlock" FontSize="16" />
        </StackPanel>
    </Grid>
</Page>