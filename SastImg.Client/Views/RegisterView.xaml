<Page
    x:Class="SastImg.Client.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16" MaxWidth="400">
            <TextBlock Text="注册账号" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" />
            <TextBox x:Name="UsernameTextBox" PlaceholderText="用户名" />
            <PasswordBox x:Name="PasswordBox" PlaceholderText="密码" />
            <PasswordBox x:Name="ConfirmPasswordBox" PlaceholderText="确认密码" />
            <Button Content="注册" Click="RegisterButton_Click" HorizontalAlignment="Stretch" />
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Page>